<div>
    <div>

        <div class="catalog">
            <div class="wrapper">
                <div class="items">
                    <div class="item item-1">
                        {% block cardImage %}
                            {% if  product.bigImg is not null%}
                            <img class="alignnone size-medium" src="/images/stone/big/{{ product.bigImg }}" width="580" height="580"><br>
                            <br><img class="mob-img" src="/images/stone/big/{{ product.bigImg }}">
                            {% else %}
                                <img class="alignnone size-medium" src="/images/no-image.png" width="580" height="580"><br>
                                <br><img class="mob-img" src="/images/no-image.png">
                            {% endif %}
                        {% endblock %}
                    </div>
                    <div class="item item-2">
                        <h3>
                            {% block cardTitle %}
                            {{product.name}}
                            {% endblock %}
                        </h3>
                        <div class="text">
                            {% block cardDescription %}
                                <div><span>Материал:</span> {{ product.parent.name }}</div>
                                {% if product.color is not null %}
                                <div><span>Цвет:</span> {{ product.color }}</div>
                                {% endif %}
                                {% if product.country is not null %}
                                <div><span>Страна:</span> {{ product.country }}</div>
                                {% endif %}
                                {% if product.weight is not null %}
                                <div><span>Вес:</span> {{ product.weight }} кг/м3</div>
                                {% endif %}
                                <div><span>Размер:</span> подбирается индивидуально.</div>
                                <div><span>Выезд и замер:</span> бесплатный при оформлении заказа и 100% оплате.</div>
                                <div><span>Доставка:</span> Осуществляется по Москве и области.</div>
                            {% endblock %}
                        </div>

                        <div class="line "></div>

                        <div style="display: flex">
                            <button class="popup-button1">Выбрать изделие</button>
                            <button class="popup-button raschet">Консультация</button>
                        </div></div>

                </div>

                {% if(product.attachments is not empty) %}
                    <div class="samples">
                        <h2>Образцы</h2>
                        <div class="our-works-small-slider">
                            {% for attachment in product.attachments %}
                                <div class="our-works-small-item">
                                    <img data-lazy="/images/samples/{{ product.id }}/{{ attachment.image }}" alt="" data-index="{{ loop.index-1 }}" />
                                </div>
                            {% endfor %}
                        </div><div class="our-works-bigslider-wrapper">
                            <div class="our-works-bigslider-overlay"></div>

                            <div class="bigslider-close">&#215;</div>

                            <div class="our-works-bigslider">
                                {% for attachment in product.attachments %}
                                    <div class="our-works-big-item">
                                        <img data-lazy="/images/samples/{{ product.id }}/{{ attachment.image }}" alt="" />
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

    </div>
</div>


<script>
    $('.our-works-small-slider').slick({
        infinite: true,
        slidesToShow: 5,
        centerMode: false,
        slidesToScroll: 1,
        lazyLoad: 'ondemand',
        responsive: [
            {
                breakpoint: 1599,
                settings: {
                    slidesToShow: 4,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 991,
                settings: {
                    slidesToShow: 3,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 767,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 567,
                settings: {
                    slidesToShow: 1,
                    slidesToScroll: 1
                }
            }
        ]
    });
    var screen_width = document.documentElement.clientWidth;
    var our_works_bigslider = $('.our-works-bigslider').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        lazyLoad: 'ondemand'
    });
    $('.our-works-small-item').on('click',function (event) {
        if(screen_width > 576){
            $('.our-works-bigslider-wrapper').fadeIn(400);
            let slider_index = $(event.target).data('index');
            window.our_works_bigslider.slick('slickGoTo', slider_index);
        }
    });
    $('.bigslider-close').on('click',function () {
        $('.our-works-bigslider-wrapper').fadeOut(400);
    });
    $('.our-works-bigslider-overlay').on('click',function () {
        $('.our-works-bigslider-wrapper').fadeOut(400);
    });
</script>