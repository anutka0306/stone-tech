{% extends 'base.html.twig' %}

{% block title %}
    {{ category.seoTitle }}
{% endblock %}

{% block description %}
    {{ category.seoDescription }}
{% endblock %}

{% block header %}
    {# header banner#}
    {% embed 'elements/header.html.twig' %}
        {% block h1 %}
            {{ category.name }}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    {{ render(controller('App\\Widget\\Rating::show')) }}

    {% embed 'elements/advantages.html.twig' %}
        {% block keyword %}
            {{ category.name|lower }}
        {% endblock %}
    {% endembed %}

    {% embed 'elements/category_card.html.twig' %}
        {% block cardImage %}
            <img class="alignnone size-medium" src="{{ asset(category.cardImage) }}" width="580" height="580"><br>
            <br><img class="mob-img" src="{{ asset(category.cardImage) }}">
           
        {% endblock %}

        {% block cardTitle %}
            {{ category.cardTitle }}
        {% endblock %}

        {% block cardDescription %}
            {{ category.cardDescription|raw }}
        {% endblock %}

        {% block cardPrice %}
            {{ category.cardPrice }}
        {% endblock %}

        {% block cardMeasure %}
            {{ category.cardMeasure }}
        {% endblock %}
    {% endembed %}

{% endblock %}